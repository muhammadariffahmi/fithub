<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Login - FitHub</title>
  <link href="/css/main.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">

</head>

<body
  style="background-image: url('/images/header-bg.jpg'); min-height: 100vh; background-size: cover; background-repeat: no-repeat; background-position: center;">

  <!-- Container background -->
  <div class="bg-light p-5 container mt-5 w-50 rounded">

    <!-- Logo -->
    <div style="text-align: center;">
      <img src="/images/logo-long.png" alt="FitHub" style="max-height: 90px;" class="mb-4">
    </div>

    <!-- Title -->
    <h2 class="text-center mb-4">Login</h2>

    <!-- Form -->
    <form action="/login" method="POST" onsubmit="redirectHome(event)">

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>

      <!-- Submit button -->
      <button type="submit" href="/dashboard" class="btn btn-primary w-100">Login</button>
    </form>
    <!-- Form END -->

    <p class="mt-3">Doesn't have an account? <a href="/register" class="text-primary">Register</a></p>

  </div>

  <!-- Home page button -->
  <div class="text-center mt-4">
    <a href="/" class="btn btn-primary rounded-pill px-4">Back to Home Page</a>
  </div>

  <script>
    // Direct the login button to home
    function redirectHome(event) {
      event.preventDefault(); // Prevent form submission
      // Perform any form validation or actions here
      window.location.href = "/"; // Redirect to index.html
    }
  </script>

</body>

</html>
