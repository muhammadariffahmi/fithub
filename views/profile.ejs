<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>User Profile - FitHub</title>
  <link href="/css/main.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">

</head>

<body
  style="background-image: url('/images/header-bg.jpg'); min-height: 100vh;   background-size: cover; background-repeat: no-repeat; background-position: center;">

  <div class="container mt-5">

    <!-- Container background -->
    <div class="bg-light p-5 container mt-5 rounded">

      <!-- Logo -->
      <div style="text-align: center;">
        <a href="/dashboard">
          <img src="/images/logo-long.png" alt="FitHub" style="max-height: 60px;" class="mb-4">
        </a>
      </div>



      <form id="profile">
        <div class="mt-2 row">
          <!-- Left: Account Info -->
          <div class="col-md-6 pe-md-3">
            <h2>Account Information</h2>

            <!-- Name -->
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" value="John Doe">
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" value="john@example.com">
            </div>

            <!-- Change Password -->
            <div class="container bg-info rounded p-3 mt-4">
              <h4>Change Password</h4>

              <div class="mb-3">
                <label for="currentPassword" class="form-label">Current Password</label>
                <input type="password" class="form-control" id="currentPassword">
              </div>

              <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" class="form-control" id="newPassword">
              </div>

              <button type="submit" class="btn btn-secondary fw-semibold">Change Password</button>
            </div>
          </div>


          <!-- Right: Fitness Profile -->
          <div class="col-md-6 ps-md-3">
            <h2>Fitness Profile</h2>

            <!-- Age -->
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input type="number" class="form-control" id="age" value="22">
            </div>

            <!-- Weight -->
            <div class="mb-3">
              <label for="weight" class="form-label">Weight</label>
              <div class="input-group">
                <input type="number" class="form-control" id="weight" value="70">
                <span class="input-group-text bg-light">kg</span>
              </div>
            </div>

            <!-- Height -->
            <div class="mb-3">
              <label for="height" class="form-label">Height</label>
              <div class="input-group">
                <input type="number" class="form-control" id="height" value="175">
                <span class="input-group-text bg-light">cm</span>
              </div>
            </div>

            <!-- Gender -->
            <div class="mb-3">
              <label for="gender" class="form-label">Gender</label>
              <div class="d-flex">
                <div class="form-check me-3">
                  <input class="form-check-input" type="radio" name="gender" id="genderMale" value="male" checked>
                  <label class="form-check-label" for="genderMale">Male</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="female">
                  <label class="form-check-label" for="genderFemale">Female</label>
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-end gap-3">

              <div class="  mt-3 ">
                <form action="/logout" method="POST">
                  <button class="btn btn-dark">Log Out</button>
                </form>
              </div>

              <!-- Delete account button -->
              <div class="  mt-3 ">
                <button class="btn btn-danger">Delete Account</button>
              </div>

              <div class="text-end mt-3">
                <button type="submit" class="btn btn-secondary fw-semibold">Update Profile</button>
              </div>
            </div>

          </div>
        </div>


      </form>

    </div>

    <!-- Home page button -->
    <div class="text-center mt-4 pb-4">
      <a href="/" class="btn btn-primary rounded-pill px-4">Back to Home Page</a>
    </div>



  </div>


</body>

</html>